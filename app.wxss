/*配置几个盒子*/
.flexinlinebox{
  display:-webkit-inline-flex;
  -webkit-justify-content:center;
  -webkit-flex-wrap:wrap;
}
.flexbox{
  display:-webkit-flex;
  -webkit-justify-content:center;
  -webkit-flex-wrap:wrap;
  -webkit-align-items:center;
}
.box{
  display: -webkit-flex;
  -webkit-justify-content:space-between;
  -webkit-align-items:center;
}
.wrapbox{
    display: -webkit-flex;
    -webkit-justify-content: space-between;
    -webkit-flex-wrap: wrap;
}
.flexstart{
  display: -webkit-flex;
  -webkit-justify-content: flex-start;
  -webkit-flex-wrap: wrap;
}
.flexScoll{
  display: -webkit-flex;
  -webkit-justify-content: flex-start;
  -webkit-align-items:center;
}
.flexite{
  display: -webkit-flex;
  -webkit-justify-content: flex-start;
  -webkit-align-items:flex-end;
}
.flexsc{
    display: -webkit-flex;
    -webkit-justify-content: space-between;
    -webkit-align-items:flex-end;
}
/*配置几个超出隐藏*/
.hidewrap{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.hidecamp{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.hidecamp2{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
/*画小三角*/
.single:after{
    background: transparent;
    position: absolute;
    content: '';
    left: 360rpx;
    top: -18rpx;
    z-index: 2;
    width: 0;
    height: 0;
    border-left: 20rpx solid transparent;
    border-right: 20rpx solid transparent;
    border-bottom: 20rpx solid #fff;
}

