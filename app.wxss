.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 234rpx 0;*/
  box-sizing: border-box;
} 
page{
    color:#3d4245;
    font-size:30rpx;
    background-color:#eee;
    font-family:"Microsoft YaHei";
