/* pages/sitemap/sitemap.wxss */
.list{
    padding:0;
    margin-bottom:-9rpx;
}
.bannerImg{
    width:750rpx;
    height:240rpx;
}
.catList .item{
    height:0;
    -webkit-transform:scale(1,0);
}
.catList .item.active{
    height:auto;
    -webkit-transform:scale(1,1);
    transition:all 0.2s linear;
}
.catList .top{
    height:100rpx;
    line-height:100rpx;
}
.catList .top .log{
    width:60rpx;
    height:60rpx;
    vertical-align: middle;
    margin-left:10prx;
}
.catList .top .text{
    color:#3d4245;
    font-size:30rpx;
}
.catList .content{
    background:#fff;
    padding:10rpx 0 20rpx;
}
.catList .content .cate2{
    width:140rpx;
    padding:5rpx;
}
.catList .content .cate2 .cate2img{
    width:120rpx;
    height:120rpx;
}
.catList .content .cate2 .text{
    font-size:24rpx;
    color:#3d4245;
}
/* pages/image/demo1/index.wxss */
.img-list1{
    width: 100%;
    overflow: hidden;
}
.img-list1 .ul{
    margin-left:-2%;
}
.img-list1 .li{
    width: 48%;
    height: 120px;
    overflow: hidden;
    position: relative;
    float:left;
    margin-left:2%;
    margin-top:10px;
}
.img-list1 .li navigator{
    width: 100%;
    height: 100%;
}
.img-list1 .li image{
    width: 100%;
    min-height: 100%;
}
.img-list1 .li text{
    position: absolute;
    bottom:0;
    left: 0;
    z-index: 2;
    width: 96%;
    padding:0 2%;
    height: 35px;
    line-height: 35px;
    color:#fff;
}
.img-list1 .li .bg{
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    height: 35px;
    background-color: #000;
    opacity: .5;
}
